aria {<aria-statement>} end

<aria-statement> :==

  analyse {<aria-analyse-statement>} end 
  --{assign ambiguous NOEs based on frequencies and structures}
  cflip <atom-selection>
  --{flips the selected atoms and velocities}
  vflip <atom-selection>
  --{flips the selected velocities only}
  flip <atom-selection>
  --{flips the selected assignments on the assignment list}
  countviolations {<aria-countviolations-statement>} end
  --{analyse systematic restraint violations}
  calibrate {<aria-calibrate-statement>} 
  --{use automatic calibration}
  do <aria-do-statement>
  --{modify data}
