search tsmap {<xray-search-tsmap-statement>} end

<xray-search-tsmap-statement> :==

  reset=<logical>
  --{Default=false}
  fobsfrom=<reciprocal-space-object>
  --{no default}
  p1fcalcfrom=<reciprocal-space-object>
  --{no default}
  trfcalc=<reciprocal-space-object>
  --{no default}
  fpartfrom=<reciprocal-space-object>
  --{no default}
  to=<real-space-object>
  --{no default}
  method=direct|fft
  --{Method=fft always uses the target F2F2. The fft method is in general
     orders of magnitude faster than the direct method. Default=fft}
  fprecision=double|single
  --{Default=double}
  lessmemory=<logical>
  --{Default=false}
  verbose=<logical>
  --{Default=true}
  specialpositions=<logical>
  --{Default=false}
